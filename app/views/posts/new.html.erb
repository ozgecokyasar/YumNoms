<div class="newplace-container">
  <div class="new-place">
    <h3 style="color: red"><%= @post.errors.full_messages.join('. ') %></h3>
    <div class="form">
      <h1>Create a new post</h1>
      <%= form_for @post do |f| %>
      <div>
        <div>
            <%= f.label :title %>
        </div>
        <%= f.text_field :title, cols: "60" %>
      </div>
      <div>
        <div>
        <%= f.label :body %>
        </div>
        <%= f.text_area :body,cols: "60", rows: "5"   %>
      </div>
      <div>
        <div>
        <%= f.label :category %>
        </div>
        <%= f.collection_select :category_id, Category.all, :id, :name, class: "browser-default" %>
      </div>
       <div>
         <%= f.label :tag_list, "Tags, seperated by commas" %>
         <%= f.text_field :tag_list %>
       </div>
      <div>
        <%= submit_tag "submit",  class: 'waves-effect waves-light btn'%>
      </div>
      <% end %>
    </div>

  </div>
</div>
