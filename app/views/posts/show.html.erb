
<div class="posts-container" >
  <div class="show">
    <div class="row">

      <div class="column1 col-lg-4">
          <%= image_tag (@post.image.medium.url) %>
      </div>

      <div class="column2 col-lg-4">
        <div>
          <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal6">View on Map</button>
          <button type="button" class="btn btn-danger btn-lg" data-toggle="modal" data-target="#myModal4">Leave a Review</button>
        </div>

        <h2><%= @post.title %></h2>
        <p><strong>Price:</strong> $<%= @post.price %></p>
        <p><strong>Description: </strong><%= @post.body %></p>
        <p><strong>Address:</strong> <%= @post.full_address %></p>
        <p><strong>Availability: </strong> <%= @post.start_time.strftime("%H:%M%P") %> - <%= @post.end_time.strftime("%H:%M%P") %></p>
        <p><strong>Category:</strong> <%= @post.category.name %></p>
        <% if user_signed_in? && can?(:manage, @post) %>
        <%= link_to 'EDIT', edit_post_path(@post) %>
        <%= link_to 'DELETE', post_path(@post), method: :delete %>
        <% end %>
        <div class="tags">
          <% if @post.tags.present? %>
          <p><strong>Tags:</strong><% @tags.each do |prod| %>
             <%= link_to prod.name, tag_path(prod) %> |
           <% end %></p>
           <% end %>
        </div>
        <div class="faves">
          <% favourite = @post.favourites.find_by(user: current_user) %>
          <% if favourite.present?%>
            <%= link_to fa_icon('heart lg'), post_favourite_path(@post, favourite), method: :delete %>
          <% else %>
            <%= link_to fa_icon('heart-o lg'), post_favourites_path(@post), method: :post %>
          <% end %>
          <%= pluralize @post.favourites.count, 'favourite' %>
        </div>
      </div>

      <div class="column3 col-lg-4">
        <% if @comments.present? %>
        <h2>Reviews:</h2>
        <div class="FixedHeightContainer">
            <% @comments.each do |comment| %>
                <div>
                  <p><%= comment.body %></p>
                  <p><strong>Rating:</strong> <%= comment.rating %>/5</p>
                  <p><strong>Review By: </strong> <%= comment.user&.first_name %></p>
                  <% if user_signed_in? && can?(:destroy, comment) %>
                    <p><%= link_to 'Delete Comment', post_comment_path(@post, comment),
                           method: :delete, data: { confirm: 'Are you sure?' }  %>
                    </p>
                  <% end %>
                  <hr>
                </div>
            <% end %>
            <% else %>
            <h2>There are no reviews for this YumNom</h2>
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>





<div class="row" style="margin: auto">
  <% if @post.nearbys.present? %>
    <h3>Nearby Places</h3>
    <% @post.nearbys(2).each do |nearby_post| %>
    <div class="col-xs-6 col-sm-4 col-lg-2">
      <%= image_tag nearby_post.image.small.url %>
      <p>
      <%= link_to nearby_post.title, nearby_post %> (<%= nearby_post.distance.round(5) %> miles)
    </p>
    </div>
  <% end %>
  <hr>
  <% end %>
</div>




