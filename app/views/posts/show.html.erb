              <%= f.select :rating, [5, 4 ,3 ,2, 1], class: "browser-default" %>
            </div>
            <br>
              <div>
              <%= f.button :submit,  class: 'btn-primary btn'  %>
              </div>
            <% end %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>

      </div>
