
<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
      <div>
        <div class="col-lg-4 col-sm-12">
          <div class="post">
          <%= image_tag("sri-lankan.jpg", width: "100%") %>
          </div>

          <div class="buttons">
            <div class="left">
              <button type="button" name="like"><i class="fa fa-heart-o" aria-hidden="true"></i>
              </button>
            </div>
            <div class="left">
              <p>LIKE COUNT</p>
            </div>
            <div class="right">
              <button type="button" name="favorite"><i class="fa fa-bookmark-o" aria-hidden="true"></i>
              </button>
            </div>
          </div>

          <br>
          <div class="summary">
            <h4><%= link_to post.title, post_path(post) %> </h4>
            <p><%= post.body %></p>
            <p><strong>Created by: </strong><%= post.user&.first_name %> <strong>On: </strong><%= post.created_at %></p>
          </div>
          </div>
      </div>
    <% end %>
  </div>
</div>
