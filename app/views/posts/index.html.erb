

<div class="container row " >
  <div class="show col-lg-12 col-xs-12 banner">
    <form class="form">
      <h1 style="color: black">Find Great Meal Deals Near you</h1>
      <br/>

      <div class="form-row">
        <%= form_tag posts_path, :method => :get do %>
        <%= text_field_tag :search, params[:search], class: 'search' %>
        <%= submit_tag "Search Near", :name => nil, class: 'btn-primary btn find-deals ' %>
        <% end %>
      </div>
    </form>


    <div class="col-lg-9 col-xs-12">
      <div id="map" style="position: relative; overflow: hidden; transform: translateZ(0px); background-color: rgb(229, 227, 223);">
      </div>
    </div>

    <script>
      const handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
          handler.getMap().setZoon(17);

      });

      $('input').geocomplete({
        search: '.map'
      });

    </script>



    <div class="FixedHeightContainer  col-lg-3 col-xs-12">
      <div class="post-list">
        <% @posts.each do |post| %>
          <%= link_to post.title, post_path(post) %>
          <hr>
        <% end %>
      </div>
    </div>

  </div>
</div>
