<div class="row banner-row">
  <div class="banner col-lg-12 col-xs-12" style="height: 500px;">
  </div>
  <div class="overlay-text col-lg-12 col-xs-12">
    <form class="form">
      <h1 style="margin-top: 50px; margin-left: 100px; color: white; font-weight: bold;">Account Settings</h1>

    </form>
  </div>
</div>
<div class="container" >
  <div class="show">
    <div class="row">

      <div style="margin-top: 30px;" class="col-lg-6 col-sm-12">
        <%= simple_form_for @user do |f| %>
        <h4>Edit your details</h4>
        <hr>
          <%= f.input :first_name %>
          <%= f.input  :last_name %>
          <%= f.input :email %>
        <%= f.button :submit,  class: 'btn-primary btn'  %>
        <% end %>
      </div>

      <div style="margin-top: 30px;" class="col-lg-6 col-sm-12">
        <%= simple_form_for @user do |f| %>
          <h4>Change password</h4>
          <hr>
          <%= f.input :current_password%>
          <%= f.input :password, placeholder: "New password (optional)" %>
          <%= f.input :password_confirmation, placeholder: "Confirm new password" %>
          <%= f.button :submit,  class: 'btn-primary btn'  %>
        <% end %>
      </div>

    </div>
  </div>
</div>
