<div class="row banner-row">
  <div class="banner col-lg-12 col-xs-12" style="height: 400px;">
  </div>
  <div class="overlay-text col-lg-12 col-xs-12">
    <form class="form">
      <h1 style="margin-top: 50px; margin-left: 100px; color: white; font-weight: bold;">Sign up here</h1>

    </form>
  </div>
</div>
<div class="container" >
  <div class="show">
  <% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>

  <%= simple_form_for @user do |f| %>
  <br>

    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.button :submit,  class: 'btn-primary btn'  %>
  <% end %>




</div>
</div>
